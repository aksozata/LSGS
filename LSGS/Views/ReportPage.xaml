<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LSGS.Views.ReportPage"
             Title="Report">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            
            <Label Text="Please enter your error description in detail below" FontSize="20" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="0,50,0,0"/>
            <Editor Placeholder="                               " Text="{Binding description}" HorizontalOptions="CenterAndExpand" HeightRequest="300" WidthRequest="300" BackgroundColor="LightGray" Margin="0,50,0,0" />
            <Button VerticalOptions="Center" Text="Report" Command="{Binding ReportCommand}" HorizontalOptions="Center" Margin="0,50,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>